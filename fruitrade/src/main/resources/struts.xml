			<result name="error" type="redirect">error.jsp</result>
		</action>
		<!-- 退出 -->
		<action name="logout" class="com.fruitrade.action.LogoutAction">
			<result name="none" type="json"></result>
			<result name="error" type="redirect">error.jsp</result>
		</action>
